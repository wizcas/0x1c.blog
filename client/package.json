{
  "private": true,
  "name": "0x1c-blog-client",
  "description": "A blog system built on Remix",
  "author": {
    "name": "Wizcas Chen",
    "email": "chen@0x1c.dev"
  },
  "version": "0.1.0",
  "license": "",
  "scripts": {
    "prepare": "yarn build:css",
    "build": "yarn build:css && remix build",
    "build:css": "NODE_ENV=production tailwindcss --postcss -i ./styles/tailwind.css -o ./app/tailwind.css --minify",
    "dev": "pm2-dev pm2.config.js",
    "dev:remix": "node -r dotenv/config node_modules/.bin/remix dev",
    "dev:css": "tailwindcss --postcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "lint": "yarn lint.compile && yarn lint.check",
    "lint.compile": "tsc",
    "lint.check": "eslint --no-error-on-unmatched-pattern app/",
    "lint.fix": "eslint --fix --no-error-on-unmatched-pattern app/",
    "lint.pre-commit": "eslint --no-error-on-unmatched-pattern --cache app/"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@tippyjs/react": "^4.2.6",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.7",
    "front-matter": "^4.0.2",
    "graphql": "^16.2.0",
    "graphql-request": "^3.7.0",
    "highlight.js": "^11.3.1",
    "isomorphic-dompurify": "^0.17.0",
    "lodash": "^4.17.21",
    "marked": "^4.0.7",
    "pinyin": "^2.10.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "remix": "^1.0.6",
    "tiny-invariant": "^1.2.0",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/lodash": "^4.14.178",
    "@types/marked": "^4.0.1",
    "@types/pinyin": "^2.10.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/sanitize-html": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "pm2": "^5.1.2",
    "postcss": "^8.4.4",
    "postcss-extend-rule": "^3.0.0",
    "postcss-preset-env": "^7.0.1",
    "prettier": "^2.5.0",
    "tailwindcss": "^3.0.1",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
