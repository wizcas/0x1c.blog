{
  "private": true,
  "name": "0x1c-blog",
  "description": "A blog system built on Remix",
  "author": {
    "name": "Wizcas Chen",
    "email": "chen@0x1c.dev"
  },
  "version": "0.1.0",
  "license": "",
  "scripts": {
    "prepare": "husky install && npm run build:css",
    "build": "npm run build:css && remix build",
    "build:css": "NODE_ENV=production tailwindcss --postcss -i ./styles/tailwind.css -o ./app/tailwind.css --minify",
    "dev": "pm2-dev pm2.config.js",
    "dev:css": "tailwindcss --postcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "lint": "npm run lint.compile && npm run lint.check",
    "lint.compile": "tsc",
    "lint.check": "eslint --no-error-on-unmatched-pattern app/",
    "lint.fix": "eslint --fix --no-error-on-unmatched-pattern app/",
    "lint.pre-commit": "eslint --no-error-on-unmatched-pattern --cache app/"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/line-clamp": "^0.2.2",
    "@tailwindcss/typography": "^0.4.1",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "pm2": "^5.1.2",
    "postcss": "^8.4.4",
    "postcss-extend-rule": "^3.0.0",
    "postcss-preset-env": "^7.0.1",
    "prettier": "^2.5.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
